<!-- Get simple form working... -->
<div class="panel panel-default">
<div class="panel-heading">
  <h1> Bit Beats -- New Artist </h1>
</div>

<div class="panel-body">
<%= simple_form_for @artist do |f| %>
<%= f.input :name, label: false, as: :text, input_html: {placeholder: "Name"} %>
<%= f.input :description, label: false, as: :text, input_html: {placeholder: "Description"} %>
<%= f.input :image_url, label: false, input_html: {placeholder: "Image"} %>
<br>
<%= f.submit "Submit".html_safe, class: "btn btn-default btn-danger" %>

<% end %>
</div>
</div>
